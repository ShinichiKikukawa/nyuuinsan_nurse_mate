<% provide(:title, 'Recover') %>

<body class="Karte-new">
  <div class="form-wrapper" style="background-color: rgba(255, 255, 255, 0.5); opacity: 0.8;">
    <h1>電子カルテ（自己申告）　新規作成</h1>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @task, url: user_tasks_path(@user), local: true, html: { enctype: "multipart/form-data" }) do |f| %>
          <%= render partial: 'shared/error_messages', locals: { obj: @task } %>

          <%= f.label :date %>
          <%= f.date_field :date, class: "form-control", "data-provide": "datepicker" %>

          <%= f.label :company, class: "label-form" %>
          <%= f.text_area :company, rows: 4, class:"form-control" %><br>

          <%= f.label :description, class: "label-form" %>
          <%= f.text_area :description, rows: 4, class: "form-control",
          value: '' %>

          <%= f.label :avatar, class: "label-form" %>
          <%= f.file_field :avatar, class: "form-control" %>

          <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
        <% end %>
      </div>
  </div>
</body>