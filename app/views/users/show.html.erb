<% provide(:title, @user.name) %>

<h1>プロフィール</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered" id="table-user">
      <tr>
        <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
        <td class="col-md-9"><%= @user.id %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :name %></th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :occupation %></th>
        <td><%= @user.occupation %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :email %></th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :created_at %></th>
        <td><%= l(@user.created_at, format: :long) %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :note %></th>
        <td><%= @user.note %></td>
      </tr>
      <% if current_user.admin? %>
        <tr>
          <td colspan="2">
            <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>    
</div>